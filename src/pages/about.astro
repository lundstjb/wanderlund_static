---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="About Us"
  description="Learn more about Wanderlund and our mission in property management."
>
  <Header />

  <main>
    <section class="section">
      <div class="container text-center">
        <h1>About Wanderlund</h1>
        <p>
          Wanderlund is dedicated to providing premium property management and
          curated vacation stays.
        </p>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .text-center {
    text-align: center;
  }
</style>
