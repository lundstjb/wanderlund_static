---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PhotoCarousel from "../../components/PhotoCarousel.astro";
import { properties } from "../../data/properties";
import { Users, Bed, Bath, Check } from "lucide-astro";

export async function getStaticPaths() {
  return properties.map((property) => ({
    params: { slug: property.slug },
    props: { property },
  }));
}

const { property } = Astro.props;
---

<Layout title={property.title} description={property.description}>
  <Header />

  <main>
    <section class="property-hero">
      <div class="container hero-grid">
        <div class="gallery">
          <PhotoCarousel images={property.images} />
        </div>
        {
          (
            <div class="booking-card">
              <div class="quick-info">
                <span>
                  <Users size={18} /> {property.guests} Guests
                </span>
                <span>
                  <Bed size={18} /> {property.bedrooms} Bedrooms
                </span>
                <span>
                  <Bath size={18} /> {property.bathrooms} Bathrooms
                </span>
              </div>
              <a class="btn btn-primary w-full" href={property.airbnbUrl}>
                Check Availability
              </a>
            </div>
          )
        }
      </div>
    </section>

    <section class="section">
      <div class="container content-grid">
        <div class="main-content">
          <div class="breadcrumbs">
            <a href="/index.html">Home</a> / <a href="/properties/index.html"
              >Properties</a
            > / {property.title}
          </div>
          <h1>{property.title}</h1>
          <p class="location">{property.location}</p>

          <div class="description">
            <h2>About this space</h2>
            <p>{property.description}</p>
          </div>

          <div class="amenities-section">
            <h2>Amenities</h2>
            <div class="amenities-grid">
              {
                property.amenities.map((amenity) => (
                  <div class="amenity">
                    <Check size={18} class="text-green" />
                    <span>{amenity}</span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .property-hero {
    padding: 4rem 0;
    background: var(--bg-secondary);
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .content-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 6rem;
  }

  .breadcrumbs {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-family: var(--font-sans);
  }

  .breadcrumbs a {
    color: var(--text-secondary);
  }

  .breadcrumbs a:hover {
    color: var(--accent);
  }

  h1 {
    font-size: 3.5rem;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .location {
    font-size: 1.25rem;
    color: var(--accent);
    margin-bottom: 4rem;
    font-family: var(--font-serif);
    font-style: italic;
  }

  .description {
    margin-bottom: 5rem;
  }

  .description h2,
  .amenities-section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    font-family: var(--font-serif);
    font-weight: 600;
  }

  .description p {
    font-size: 1.15rem;
    line-height: 1.8;
  }

  .amenities-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .amenity {
    display: flex;
    align-items: center;
    gap: 1rem;
    color: var(--text-secondary);
    font-size: 1rem;
  }

  .amenity span {
    font-family: var(--font-sans);
  }

  .text-green {
    color: var(--accent);
  }

  .quick-info {
    margin-bottom: 2rem;
    span {
      margin-right: 0.5rem;
    }
  }

  @media (max-width: 1024px) {
    .property-hero {
      padding: 0 !important;
      background: none !important;
    }

    .hero-grid {
      gap: 0 !important;
    }

    .content-grid {
      grid-template-columns: 1fr !important;
      padding-top: 2rem !important;
    }

    .amenities-grid {
      grid-template-columns: 1fr !important;
      gap: 1rem !important;
    }

    h1 {
      font-size: 2.5rem !important;
      margin-top: 1.5rem !important;
    }
  }
</style>
