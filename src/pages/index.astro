---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PropertyCard from "../components/PropertyCard.astro";
import { properties } from "../data/properties";
---

<Layout title="Boutique Vacation Stays">
  <Header />

  <main>
    <section class="hero">
      <div class="container hero-content">
        <h1>Curated Vacation Stays & Seamless Management</h1>
        <p>
          Discover hand-picked properties in Knoxville Tennessee. Experience
          comfort, care, and quality.
        </p>
        <div class="hero-actions">
          <a href="/properties" class="btn btn-primary">Browse Properties</a>
          <a href="/services" class="btn btn-outline">Management Services</a>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <div class="section-header">
          <h2>Featured Properties</h2>
          <p>Expertly-curated homes for your next unforgettable getaway.</p>
        </div>
        <div class="property-grid">
          {properties.map((property) => <PropertyCard property={property} />)}
        </div>
      </div>
    </section>

    <section class="section bg-secondary">
      <div class="container">
        <div class="services-grid">
          <div class="service-content">
            <h2>Stress-Free Vacation Rental Management</h2>
            <p>
              We handle everything from marketing and guest communication to
              maintenance and housekeeping, so you can enjoy the benefits of
              ownership without the hassle.
            </p>
            <ul class="check-list">
              <li>Professional Photography & Listing Optimization</li>
              <li>Guest Screening & 24/7 Support</li>
              <li>Local Maintenance & Housekeeping Teams</li>
              <li>Dynamic Pricing for Maximum Revenue</li>
            </ul>
            <a href="/services" class="btn btn-primary"
              >Learn More About Management</a
            >
          </div>
          <div class="service-image">
            <img
              src="https://images.unsplash.com/photo-1560518883-ce09059eeffa?auto=format&fit=crop&q=80&w=800"
              alt="Property Management"
            />
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .hero {
    background: linear-gradient(rgba(0, 0, 0, 0.45), rgba(0, 0, 0, 0.45)),
      url("/images/properties/jackson/EL8A9744.jpg");
    background-size: cover;
    background-position: center;
    height: 90vh;
    display: flex;
    align-items: center;
    color: white;
    text-align: center;
  }

  .hero-content {
    max-width: 900px;
  }

  .hero h1 {
    font-size: 4.5rem;
    margin-bottom: 2rem;
    line-height: 1.1;
    font-weight: 500;
  }

  .hero p {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 3.5rem;
    font-family: var(--font-sans);
    letter-spacing: 0.05em;
    font-weight: 300;
  }

  .hero-actions {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .btn {
    padding: 1.1rem 2.5rem;
    border-radius: 99px;
    font-weight: 500;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .btn-primary {
    background: var(--accent);
    color: var(--accent-foreground);
    border: 1px solid var(--accent);
  }

  .btn-outline {
    border: 1px solid rgba(255, 255, 255, 0.8);
    color: white;
  }

  .btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
  }

  .btn-outline:hover {
    background: white;
    color: var(--text-primary);
  }

  .section-header {
    margin-bottom: 5rem;
    text-align: center;
  }

  .section-header h2 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
  }

  .property-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: 3rem;
  }

  .bg-secondary {
    background: var(--bg-secondary);
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 6rem;
    align-items: center;
  }

  .service-content h2 {
    font-size: 3rem;
    margin-bottom: 2rem;
  }

  .check-list {
    list-style: none;
    margin: 3rem 0;
  }

  .check-list li {
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1.25rem;
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .check-list li::before {
    content: "â€”";
    color: var(--accent);
    font-weight: 300;
  }

  .service-image img {
    border-radius: var(--radius);
    box-shadow: 0 40px 80px -20px rgba(0, 0, 0, 0.15);
  }

  @media (max-width: 968px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }

    .hero h1 {
      font-size: 3rem;
    }

    .property-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
