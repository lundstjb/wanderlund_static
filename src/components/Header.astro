---
import { Home } from "lucide-astro";
---

<header class="header">
  <div class="container header-container">
    <a href="/wanderlund-static-website/index.html" class="logo">
      <Home size={24} />
      <span>Wanderlund</span>
    </a>
    <nav class="nav">
      <ul>
        <li>
          <a href="/wanderlund-static-website/properties/index.html"
            >Properties</a>
        </li>
        <li>
          <a href="/wanderlund-static-website/about/index.html#services"
            >Services</a
          >
        </li>
        <li><a href="/wanderlund-static-website/about/index.html">About</a></li>
        <li>
          <a href="/wanderlund-static-website/contact/index.html">Contact</a>
        </li>
      </ul>
    </nav>
    <div class="cta">
      <a
        href="/wanderlund-static-website/contact/index.html"
        class="btn btn-primary">Book a Stay</a
      >
    </div>
  </div>
</header>

<style>
  .header {
    height: 90px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid var(--border);
    position: sticky;
    top: 0;
    background: rgba(243, 239, 231, 0.8);
    backdrop-filter: blur(10px);
    z-index: 100;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-family: var(--font-sans);
  }

  .nav ul {
    list-style: none;
    display: flex;
    gap: 2.5rem;
  }

  .nav a {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .nav a:hover {
    color: var(--text-primary);
  }

  .btn {
    padding: 0.8rem 1.75rem;
    border-radius: 99px;
    font-weight: 500;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--accent);
    color: var(--accent-foreground);
    border: 1px solid var(--accent);
  }

  .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(187, 146, 78, 0.2);
  }

  @media (max-width: 768px) {
    .nav,
    .cta {
      display: none;
    }
  }
</style>
