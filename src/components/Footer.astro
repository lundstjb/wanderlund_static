---
import { Instagram, Facebook, Twitter } from "lucide-astro";
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-info">
        <h3>Wanderlund</h3>
        <p>
          Premium property management and curated vacation rentals in
          high-demand destinations.
        </p>
        <div class="socials">
          <a href="#"><Instagram size={20} /></a>
          <a href="#"><Facebook size={20} /></a>
          <a href="#"><Twitter size={20} /></a>
        </div>
      </div>
      <div class="footer-links">
        <h4>Navigation</h4>
        <ul>
          <li>
            <a href="/www.wanderlund.com/properties/index.html">Properties</a>
          </li>
          <li>
            <a href="/www.wanderlund.com/services/index.html"
              >Management Services</a
            >
          </li>
          <li>
            <a href="/www.wanderlund.com/about/index.html">About Us</a>
          </li>
          <li>
            <a href="/www.wanderlund.com/contact/index.html">Contact</a>
          </li>
        </ul>
      </div>
      <div class="footer-contact">
        <h4>Contact Us</h4>
        <p>Email: wanderlundventures@gmail.com</p>
        <p>Phone: +1 (865) 712-1490</p>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; {new Date().getFullYear()} Wanderlund. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--bg-secondary);
    padding: 8rem 0 4rem;
    border-top: 1px solid var(--border);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 6rem;
    margin-bottom: 5rem;
  }

  .footer-info h3 {
    margin-bottom: 2rem;
    font-size: 1.75rem;
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-family: var(--font-sans);
    font-weight: 600;
  }

  .footer-info p {
    max-width: 360px;
    margin-bottom: 2rem;
    line-height: 1.8;
  }

  .socials {
    display: flex;
    gap: 1.5rem;
    color: var(--text-secondary);
  }

  .socials a {
    transition: all 0.3s ease;
  }

  .socials a:hover {
    color: var(--accent);
    transform: translateY(-3px);
  }

  .footer h4 {
    margin-bottom: 2rem;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--text-primary);
    font-family: var(--font-sans);
  }

  .footer ul {
    list-style: none;
  }

  .footer ul li {
    margin-bottom: 1rem;
  }

  .footer ul a {
    color: var(--text-secondary);
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .footer ul a:hover {
    color: var(--accent);
    padding-left: 0.5rem;
  }

  .footer-bottom {
    padding-top: 3rem;
    border-top: 1px solid var(--border);
    text-align: center;
    font-size: 0.8rem;
    color: var(--text-secondary);
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 4rem;
    }
  }
</style>
