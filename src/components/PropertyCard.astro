---
import type { Property } from "../data/properties";
import { Users, Bed, Bath, ArrowRight, House } from "lucide-astro";

interface Props {
  property: Property;
}

const { property } = Astro.props;
---

<a
  href={`/wanderlund-static-website/properties/${property.slug}/index.html`}
  class="card-link"
>
  <div class="card">
    <div class="image-wrapper">
      <img src={property.image} alt={property.title} loading="lazy" />
      <div class="badge">{property.location}</div>
    </div>
    <div class="content">
      <h3>{property.title}</h3>
      <div class="amenities">
        <span><Users size={16} /> {property.guests} Guests</span>
        <span><House size={16} /> {property.bedrooms} BR</span>
        <span
          ><Bed size={16} />
          {property.beds}
          {property.beds > 1 ? "Beds" : "Bed"}</span
        >
        <span><Bath size={16} /> {property.bathrooms} BA</span>
      </div>
      <div class="link">
        View Details <ArrowRight size={16} />
      </div>
    </div>
  </div>
</a>

<style>
  .card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .card {
    background: var(--bg-primary);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .card-link:hover .card {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.08);
  }

  .image-wrapper {
    position: relative;
    aspect-ratio: 4 / 3;
    overflow: hidden;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .card-link:hover .image-wrapper img {
    transform: scale(1.05);
  }

  .badge {
    position: absolute;
    top: 1.25rem;
    left: 1.25rem;
    background: rgba(243, 239, 231, 0.9);
    backdrop-filter: blur(4px);
    padding: 0.4rem 1rem;
    border-radius: 99px;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--text-primary);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .content {
    padding: 2rem;
    text-align: center;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .content h3 {
    margin-bottom: 1.25rem;
    font-size: 1.5rem;
    color: var(--text-primary);
  }

  .amenities {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    font-family: var(--font-sans);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .amenities span {
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    font-weight: 500;
    color: var(--accent);
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding-bottom: 0.25rem;
    border-bottom: 1px solid transparent;
    transition: all 0.3s ease;
    width: fit-content;
    margin: 0 auto;
  }

  .card-link:hover .link {
    border-bottom: 1px solid var(--accent);
    gap: 0.75rem;
  }
  @media (max-width: 1024px) {
    .card {
      border-radius: 0 !important;
      border-left: none !important;
      border-right: none !important;
    }
  }
</style>
